<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
  <persistence-unit name="ZephyrPU">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>Zephyr.entities.Service</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}"/>
      <property name="javax.persistence.jdbc.user" value="${DB_USER}"/>
      <property name="javax.persistence.jdbc.password" value="${DB_PWD}"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
